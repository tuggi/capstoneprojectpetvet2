<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="adnu.capstone.capstoneproject.registerPage"
    android:nestedScrollingEnabled="true"
    android:background="@drawable/bg11">

    <!--<include layout="@layout/toolbar"-->
    <!--android:id="@+id/registerPageToolbar" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:id="@+id/linearLayout3">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/pet_form_name"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="First Name"
                android:drawableRight="@android:drawable/sym_action_email"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/lastNameTField"
                android:layout_below="@+id/pet_form_name"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/pet_form_name"
                android:hint="Last Name"
                android:layout_marginTop="10dp"
                android:drawableRight="@android:drawable/sym_action_email"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/emailTField"
                android:layout_below="@+id/lastNameTField"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/lastNameTField"
                android:hint="Email Address"
                android:layout_marginTop="10dp"
                android:drawableRight="@android:drawable/sym_action_email"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/PasswordTField"
                android:layout_below="@+id/emailTField"
                android:layout_alignParentStart="true"
                android:layout_alignEnd="@+id/emailTField"
                android:hint="Password"
                android:layout_marginTop="10dp"
                android:drawableRight="@android:drawable/sym_action_email"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/phoneNumberField"
                android:layout_below="@+id/PasswordTField"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:hint="Phone Number"
                android:layout_marginTop="10dp"
                android:drawableRight="@android:drawable/sym_action_email"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputLayoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/addressTField"
                android:hint="Home Address"
                android:layout_marginTop="10dp"
                android:drawableRight="@android:drawable/sym_action_email"/>
        </android.support.design.widget.TextInputLayout>




    </LinearLayout>


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_signup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:padding="12dp"
        android:text="Create Account"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true" />

    <TextView android:id="@+id/link_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Already a member? Login"
        android:gravity="center"
        android:textSize="16dip"
        android:layout_below="@+id/btn_signup"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true" />

